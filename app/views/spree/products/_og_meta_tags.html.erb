<% if params[:controller] == 'spree/products' and params[:action] == 'show' %>
	<meta property="og:title"              content="<%= @product.name %>" />
	<meta property="og:url"                content="<%="#{request.protocol}#{request.host_with_port}/products/#{@product.slug}#{@taxon ? '?taxon_id='+@taxon.id.to_s : ''} "%>" />
	<meta property="og:image"              content="<%= @product.variant_images.first.attachment.url rescue '/assets/noimage/small.png' %>" />
<% end %>