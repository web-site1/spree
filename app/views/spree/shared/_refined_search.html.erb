                    <%= %Q{#{opt.first} (#{opt.last})}%></label>
                </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div> <!-- panel -->


    <% color_opts = srch_opts('color')
       sec_cnt = color_opts.map{|i|i.last}.inject(:+) rescue 0
