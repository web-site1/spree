

<div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 sidebar left-sidebar">
  <%= form_tag spree.products_path,id: 'ref_srch_frm', method: 'get' %>
  <h3>Refine Search</h3>

  <% type_opts = srch_opts('type')
     sec_cnt = type_opts.map{|i|i.last}.inject(:+) rescue 0
  %>
  <div class="panel-group search" id="accordion" role="tablist" aria-multiselectable="true">
    <div class="panel panel-default">
      <div class="panel-heading" role="tab" id="headingType">
        <h4 class="panel-title">
          <a class="top-panel" data-toggle="collapse" data-parent="#accordion" href="#collapseType" aria-expanded="false" aria-controls="collapseType">
            Type (<%= sec_cnt %>)
          </a>
        </h4>
      </div>
      <div id="collapseType" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingType">
        <div class="panel-body">
          <ul>
            <% type_opts.each_with_index do |opt,i| %>
                <li>
                  <label class="checkbox" for="checkbox<%=i%>"><input name="type[]" type="checkbox" value="<%= opt.first %>" id="checkbox<%=i%>" data-toggle="checkbox" <%=src_selected('type',opt.first,'checked',true)%>>
                    <%= %Q{#{opt.first} (#{opt.last})}%></label>
                </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div> <!-- panel -->



    <% widths_opts = srch_opts('widths')
       sec_cnt = widths_opts.map{|i|i.last}.inject(:+) rescue 0
    %>

    <div class="panel panel-default">
      <div class="panel-heading" role="tab" id="searchWidth">
        <h4 class="panel-title">
          <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseWidth" aria-expanded="false" aria-controls="collapseWidth">
            Width (<%= sec_cnt %>)
          </a>
        </h4>
      </div>
      <div id="collapseWidth" class="panel-collapse collapse" role="tabpanel" aria-labelledby="searchWidth">
        <div class="panel-body">
          <ul>
              <% widths_opts.each_with_index do |opt,i| %>
                  <li>
                    <label class="checkbox" for="checkbox2-<%=i%>"><input name="widths[]" type="checkbox" value="<%= opt.first %>" id="checkbox2-<%=i%>" data-toggle="checkbox" <%=src_selected('widths',opt.first,'checked',true)%>>
                      <%= %Q{#{opt.first} (#{opt.last})}%></label>
                  </li>
              <% end %>
          </ul>
        </div>
      </div>
    </div> <!-- panel -->





    <% put_up_opts = srch_opts('ribbon_putups')
       sec_cnt = put_up_opts.map{|i|i.last}.inject(:+) rescue 0
    %>

    <div class="panel panel-default">
      <div class="panel-heading" role="tab" id="searchWidth">
