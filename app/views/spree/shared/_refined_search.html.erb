    <div class="panel panel-default">
      <div class="panel-heading" role="tab" id="searchColor">
        <h4 class="panel-title">
          <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseColor" aria-expanded="false" aria-controls="collapseColor">
